<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>Dutch Treat - @ViewBag.Title</title>
	<link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
	<link href="~/node_modules/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
	<link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
	
	<header>
		<nav class="navbar navbar-dark bg-dark navbar-expand-sm">
			<h1 class="navbar-brand"><i class="fa fa-paint-brush"></i> Dutch Treat</h1>
			<button class="navbar-toggler" data-toggle="collapse" data-target="#nav-menu">
				<span class="navbar-toggler-icon"></span>
			</button>
			<menu id="nav-menu" class="navbar-collapse collapse">
				<ul class="navbar-nav">
					<li class="nav-item">
						<a asp-controller="App" asp-action="Index" class="nav-link">Home</a>
					</li>
					<li class="nav-item">
						<a asp-controller="App" asp-action="Contact" class="nav-link">Contact</a>
					</li>
					<li class="nav-item">
						<a asp-controller="App" asp-action="About" class="nav-link">About Us</a>
					</li>
				</ul>
			</menu>
		</nav>
	</header>

	<section class="container">
		<h2 class="text-center">@ViewBag.Title</h2>
		@RenderBody()
	</section>
	<footer id="footer" class="jumbotron">
		<p class="text-center">Copyright &copy; 2020 Dutch Treat LLC</p>
	</footer>

	<script src="~/node_modules/jquery/dist/jquery.min.js"></script>
	<script src="~/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js"></script>
	@RenderSection("scripts", false)
</body>
</html>
